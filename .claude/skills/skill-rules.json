{
  "version": "1.0.0",
  "description": "Skill activation triggers for Claude Code in this NestJS/Next.js monorepo project.",
  "skills": {
    "frontend-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "React 19 + TypeScript frontend development with Vite, shadcn/ui, Tailwind CSS 4, and Radix UI. Includes patterns for component composition, CVA variants, form handling with React Hook Form + Zod, and strict TypeScript configurations.",
      "promptTriggers": {
        "keywords": [
          "react",
          "component",
          "frontend",
          "ui",
          "shadcn",
          "tailwind",
          "vite",
          "radix",
          "button",
          "card",
          "dialog",
          "form",
          "input",
          "hook form",
          "zod",
          "typescript",
          "cva",
          "variant",
          "cn()",
          "styling",
          "implement",
          "refactor",
          "create feature"
        ],
        "intentPatterns": [
          "(create|add|make|build|update).*?(component|ui|button|card|dialog|form)",
          "(implement|add).*?(form|validation|schema)",
          "(setup|configure|wrap).*?(radix|shadcn|tailwind)",
          "(create|build).*?(frontend|ui|react)",
          "(fix|debug).*?(react|component|form|styling)",
          "(refactor|restructure|reorganize).*?(frontend|ui|component)",
          "(add|create|implement).*?(variant|style|animation)",
          "how (to|do I).*?(style|component|form|validate)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/src/components/**/*.tsx",
          "**/src/components/ui/**/*.tsx",
          "**/src/hooks/**/*.ts",
          "**/src/lib/**/*.ts",
          "**/src/App.tsx"
        ]
      }
    }
  },
  "notes": {
    "enforcement_types": {
      "suggest": "Skill suggestion appears but doesn't block execution",
      "block": "Requires skill to be used before proceeding (guardrail)",
      "warn": "Shows warning but allows proceeding"
    },
    "priority_levels": {
      "critical": "Highest - Always trigger when matched",
      "high": "Important - Trigger for most matches",
      "medium": "Moderate - Trigger for clear matches",
      "low": "Optional - Trigger only for explicit matches"
    }
  }
}
